<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menu_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/menu_settings_btn"
            android:layout_width="@dimen/menu_size"
            android:layout_height="@dimen/menu_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/menu_item"
            android:src="@drawable/btn_settings" />

        <ImageView
            android:id="@+id/menu_newgame_btn"
            android:layout_width="@dimen/menu_size"
            android:layout_height="@dimen/menu_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/menu_item"
            android:src="@drawable/new_game" />

        <ImageView
            android:id="@+id/menu_undo_btn"
            android:layout_width="@dimen/menu_size"
            android:layout_height="@dimen/menu_size"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/menu_item"
            android:src="@drawable/btn_undo" />

        <ImageView
            android:id="@+id/menu_autofinish_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_size"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/menu_item"
            android:src="@drawable/btn_autofinish" />

    </LinearLayout>

    <ImageView
        android:id="@+id/shuffle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/menu_item"
        android:src="@drawable/shuffle_icon"
        android:textColor="#0A0A0A"
        android:textSize="14sp"
        android:textStyle="bold" />
</FrameLayout>